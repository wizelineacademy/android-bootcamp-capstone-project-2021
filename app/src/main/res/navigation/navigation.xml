<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.cryptochallenge.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action android:id="@+id/toCryptoDetail"
            app:destination="@id/cryptoDetailFragment"/>
    </fragment>
    <fragment
        android:id="@+id/cryptoDetailFragment"
        android:name="com.example.cryptochallenge.ui.cryptodetail.CryptoDetailFragment"
        android:label="fragment_crypto_detail"
        tools:layout="@layout/fragment_crypto_detail">
    </fragment>
</navigation>