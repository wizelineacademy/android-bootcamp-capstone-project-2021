<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.esaudev.wizeline.ui.list.ListFragment"
        android:label="Bitso books"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/listFragmentToDetailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.esaudev.wizeline.ui.detail.DetailFragment"
        android:label="Bitso coin details"
        tools:layout="@layout/fragment_detail" />
</navigation>