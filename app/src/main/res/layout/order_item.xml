<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cryptocurrency_order_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center"
            android:text="MXN"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/currency_order_amount"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cryptocurrency_order_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="bla bla , bla 2"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cryptocurrency_order_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="bla bla bla 2"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
