<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_crypto_name_major"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:lines="1"
        android:textAlignment="gravity"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="@dimen/sp_25"
        app:autoSizeMinTextSize="@dimen/sp_10"
        app:autoSizeStepGranularity="@dimen/sp_2"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/gl_45_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_crypto_image_major"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/gl_45_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_crypto_name_major" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/gl_55_vertical"
        app:layout_constraintStart_toStartOf="@id/gl_45_vertical"
        app:layout_constraintTop_toTopOf="@id/iv_crypto_image_major" />

    <TextView
        android:id="@+id/tv_crypto_name_minor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:lines="1"
        android:textAlignment="gravity"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="@dimen/sp_25"
        app:autoSizeMinTextSize="@dimen/sp_10"
        app:autoSizeStepGranularity="@dimen/sp_2"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_55_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_crypto_image_minor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_55_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_crypto_name_minor" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_45_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_55_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55" />

</androidx.constraintlayout.widget.ConstraintLayout>